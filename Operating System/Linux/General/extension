#!/bin/bash

errorCount=0

which aptitude &> /dev/null
if [ $? == 0 ]; then
    sudo aptitude safe-upgrade
    if [ $? != 0 ]; then
        errorCount=$((errorCount+1))
    fi
fi

which pip3 &> /dev/null
if [ $? == 0 ]; then
    pip3 list --outdated --format=freeze | awk -F"==" '{print $1}' | xargs -i pip3 install -U {}
    if [ $? != 0 ]; then
        if [ $LANG == "ko_KR.UTF-8" ]; then
            echo "pip3 을 업데이트 하는 도중 에러가 발생하였습니다. "
        else
            echo "An error occured when updating pip3."
        fi
        errorCount=$((errorCount+1))
    fi
fi

do-release-upgrade
if [ $? != 0 ]; then
    errorCount=$((errorCount+1))
fi

which wsl.exe > /dev/null 2>&1
if [ $? == 0 ]; then
    wsl.exe --update
    if [ $? != 0 ]; then
        errorCount=$((errorCount+1))
    fi
fi

which pip3 &> /dev/null
if [ $? == 0 ]; then
    pip3 cache purge
    if [ $? != 0 ]; then
        errorCount=$((errorCount+1))
    fi
fi

if [ -d /mnt/c/Users/$USER/AppData/Local/Microsoft/WindowsApps ]; then
    /mnt/c/Users/$USER/AppData/Local/Microsoft/WindowsApps/winget.exe upgrade --all
    if [ $? != 0 ]; then
        errorCount=$((errorCount+1))
    fi
    echo -e "\e[m"
fi

if [ -x ~/.local/bin/gitVI_update ]; then
    ~/.local/bin/gitVI_update
    if [ $? != 0 ]; then
        errorCount=$((errorCount+1))
    fi
fi

if [ -r ~/Documents/Release/ShellScript/Operating\ System/Windows/BatchScript/CheckDisk.bat -a -r ~/.shellscript/wsl-sudo/wsl-sudo.py -a -d /mnt/c/Windows/System32 ]; then
    winPath=$(wslpath -w ~/Documents/Release/ShellScript/Operating\ System/Windows/BatchScript/CheckDisk.bat)
    python3 ~/.shellscript/wsl-sudo/wsl-sudo.py cmd.exe /c "$winPath"
fi

which zsh &> /dev/null
if [ $? == 0 ]; then
    /bin/zsh -c "source ~/.zshrc; which omz > /dev/null 2>&1"
    if [ $? == 0 ]; then
        /bin/zsh -c "source ~/.zshrc; omz update"
        echo $!
        if [ $? != 0 ]; then
            errorCount=$((errorCount+1))
        fi
    fi
fi

if [ $errorCount -gt 0 ]; then
    exit 1
else
    exit 0
fi
